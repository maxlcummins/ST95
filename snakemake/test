rule all:
    input:
        expand(config['outdir']+"abricate/"+"{output_prefix}/{gene_db}/{sample}.tab",
               sample=sample_ids, gene_db=gene_dbs, output_prefix=output_pre),
        #expand(config['outdir']+"abricate/"+"{output_prefix}_abricate.tab", output_prefix = output_pre)

rule snippy_run:
    input:
        # db = "{gene_db}", gene_db=gene_dbs,
        assembly = config['assemblies']+"/{sample}.fasta",
    output:
        config['outdir']+"abricate/"+"{output_prefix}/{gene_db}/{sample}.tab"
    conda:
        "config/abricate.yaml"
    params:
        db = "{gene_db}", gene_db = gene_dbs,
        datadir = config['gene_db_location'],
        #minid = config['minimum_id'],
        #mincov = config['minimum_cov']
    shell:
        "abricate --nopath --datadir {params.datadir} --db {params.db} {input.assembly} > {output}"

# in beta
rule summarise:
    input:
        config['outdir']+"abricate/"+"{output_prefix}/{gene_db}/{sample}.tab"
    output:
        config['outdir']+"abricate/"+"{output_prefix}_abricate.tab"
    conda:
        "config/abricate.yaml"
    params:
        params = "{output_prefix}", output_prefix = config['prefix']
    shell:
        "abricate --summary {params.output_prefix}/*/*.tab > {output};"
